#!/bin/bash
# Pre-commit hook for ESLint import linting
# Prevents commits with missing imports (readFileSync, etc.)
#
# This hook runs ESLint on staged TypeScript files to catch:
# - Missing imports (import/no-unresolved)
# - Unused imports (no-unused-vars)
# - Import duplication (import/no-duplicates)
# - Other import-related errors

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if eslint is available
if ! command -v npx &> /dev/null; then
  echo -e "${YELLOW}‚ö† npx not found, skipping ESLint import check${NC}"
  exit 0
fi

# Get staged TypeScript files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)

if [ -z "$STAGED_FILES" ]; then
  exit 0
fi

# Run eslint on staged files with import-focused rules
echo -e "${YELLOW}üîç Running ESLint import linting...${NC}"

ESLINT_OUTPUT=$(npx eslint $STAGED_FILES 2>&1 || true)

# Check for import-related errors
HAS_IMPORT_ERRORS=$(echo "$ESLINT_OUTPUT" | grep -E "import/no-unresolved|import/named|import/default|import/namespace|import/export|import/no-duplicates" || true)

if [ -n "$HAS_IMPORT_ERRORS" ]; then
  echo -e "${RED}‚ùå ESLint import errors found:${NC}"
  echo "$ESLINT_OUTPUT" | grep -E "import/" || true
  echo ""
  echo -e "${RED}Fix import errors before committing:${NC}"
  echo "  - Check that all imported modules are installed"
  echo "  - Verify import paths are correct"
  echo "  - Remove duplicate imports"
  echo ""
  echo -e "${YELLOW}Run this command to see all errors:${NC}"
  echo "  npx eslint $STAGED_FILES"
  exit 1
fi

# Check for no-unresolved errors
HAS_RESOLUTION_ERRORS=$(echo "$ESLINT_OUTPUT" | grep "Unable to resolve path to module" || true)

# Filter out known allowed modules (@opencode-ai/plugin, bun, etc.)
HAS_REAL_RESOLUTION_ERRORS=$(echo "$HAS_RESOLUTION_ERRORS" | grep -v "@opencode-ai/plugin" | grep -v "bun" || true)

if [ -n "$HAS_REAL_RESOLUTION_ERRORS" ]; then
  echo -e "${RED}‚ùå Module resolution errors found:${NC}"
  echo "$HAS_REAL_RESOLUTION_ERRORS"
  exit 1
fi

echo -e "${GREEN}‚úÖ Import linting passed${NC}"
exit 0
