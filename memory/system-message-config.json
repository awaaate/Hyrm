{
  "version": "5.0",
  "description": "Dynamic system message configuration for autonomous multi-agent system. CRITICAL: No human interaction - agents operate independently.",
  "enabled": true,
  
  "autonomous_mode": {
    "enabled": true,
    "description": "Agents operate without human interaction. Never ask questions. Never wait for input.",
    "treat_user_messages_as": "system_priority_signals"
